rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user can only manage their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // A user can only manage their own pets
    match /pets/{petId} {
      // Assumes the pet document has a 'userId' field
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // A user can only manage their own bookings
    match /bookings/{bookingId} {
      // Assumes the booking document has a 'userId' field
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Store information and membership
    match /stores/{storeId} {
      // Allow anyone to read store details
      allow read: if true;
      // Allow authenticated users to update store details (e.g. for booking)
      allow update: if request.auth != null;
      allow create, delete: if false;

      // A user can manage their own document in the members subcollection
      match /members/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Public data like services should be readable by anyone
    match /services/{serviceId} {
      allow read: if true;
      // Writes should be managed by backend or console, not client apps
      allow write: if false;
    }
  }
}