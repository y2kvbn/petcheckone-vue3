rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user avatars
    match /avatars/{userId}/{fileName} {
      // Allow anyone to read avatars
      allow read: if true;
      // Allow authenticated users to write to their own avatar directory
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Existing rules for signatures (if any)
    match /signatures/{userId}/{signatureFile} {
      allow create: if request.resource.size < 1 * 1024 * 1024 
                    && request.resource.contentType.matches('image/png');
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}